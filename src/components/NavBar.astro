---
import { basics } from "@cv"
const { name, image} = basics
const navItems = [
  { name: "Home", href: "#hero" },
  { name: "About", href: "#about" },
  { name: "Education", href: "#education" },
  { name: "Experience", href: "#experience" },
  { name: "Projects", href: "#projects" },
  { name: "Skills", href: "#skills" },
  { name: "Volunteer", href: "#volunteer" }
];
---

<nav class="navbar">
  <div class="container">
    <div class="logo">
      <a href="/" class="logo"><img src={image} alt={name} /></a>
    </div>
    <ul class="nav-links">
      {navItems.map(item => (
        <li><a href={item.href}>{item.name}</a></li>
      ))}
    </ul>
  </div>
</nav>

<ul class="nav-links" id="nav-links">
  
</ul>



<style>
.navbar {
  background: #0d1624;
  border-right: 2px solid rgba(74, 167, 217, 0.2);
  padding: 2rem 0 2rem 0;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 220px;
  z-index: 1000;
  box-shadow: 4px 0 12px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
}

.logo {
  font-weight: 700;
  font-size: 1.6rem;
  color: #4aa7d9;
  text-decoration: none;
  letter-spacing: 1px;
  transition: color 0.3s;
  margin-bottom: 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo:hover {
  color: #84c6ff;
}

.nav-links {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 2rem;
  margin: 0;
  padding: 0;
  width: 100%;
  align-items: center;
}

.nav-links a {
  color: #e6f1ff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: color 0.3s, border-right 0.3s;
  padding-right: 0;
  padding-bottom: 4px;
  border-bottom: 2px solid transparent;
  width: 100%;
  text-align: center;
}

.nav-links a:hover {
  color: #4aa7d9;
  border-bottom: 2px solid #4aa7d9;
}

img {
  aspect-ratio: 1 / 1;
  width: 80px;
  margin-bottom: 10px;
  border-radius: 100px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
}

@media (max-width: 768px) {
  .navbar {
  width: 70px;
  padding: 1rem 0;
  }
  .logo {
  font-size: 1rem;
  margin-bottom: 1rem;
  }
  .nav-links {
  gap: 1rem;
  }
  .nav-links a {
  font-size: 0.9rem;
  padding: 0;
  }
}
</style>