---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Proyectos" >
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>•</span>}
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver código fuente del proyecto ${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
ul {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
  gap: 2rem;
  margin-inline: 0;
  padding: 0;
  list-style: none;
  max-width: 1100px;
  margin-left: auto;
  margin-right: auto;
}

@media (width <= 700px) {
  ul {
    grid-template-columns: 1fr;
    gap: 1rem;
    max-width: 98vw;
  }
}

/* El resto del CSS permanece igual */
:root {
  --primary: #e0e7ff;
  --secondary: #94a3b8;
  --accent: #38bdf8;
  --bg: #0f172a;
  --border: #1e293b;
  --shadow: 0 6px 20px rgba(0,0,0,0.3);
  --radius: 14px;
  --font-main: 'Inter',
}

article {
  display: flex;
  flex-direction: column;
  gap: 18px;
  padding: 24px;
  height: 100%;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  background: #1e293b;
  box-shadow: var(--shadow);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

article:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 12px 32px rgba(0,0,0,0.4);
  border-color: var(--accent);
}

article header {
  flex: 1;
}

article h3 {
  margin-bottom: 8px;
  font-size: 1.2rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  color: var(--accent);
}

article a {
  color: var(--primary);
  text-decoration: none;
  transition: color 0.2s ease;
}

article a:hover {
  color: var(--accent);
}

article p {
  font-size: 0.95rem;
  line-height: 1.5rem;
  margin-bottom: 4px;
  color: var(--secondary);
}

article h3 span {
  color: var(--accent);
  font-size: 1.2em;
  margin-left: 6px;
  animation: flicker 3s ease-in-out infinite;
}

footer {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  font-size: 0.8rem;
}

footer span {
  padding: 0.25rem 0.7rem;
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--primary);
  background: rgba(30, 41, 59, 0.8);
  border-radius: 8px;
  border: 1px solid var(--border);
  letter-spacing: 0.01em;
}

.github-code-link {
  margin-left: 8px;
  display: inline-flex;
  align-items: center;
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.github-code-link:hover {
  opacity: 1;
}

@keyframes flicker {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.25; }
}

@media (width <= 700px) {
  ul {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  article {
    border: none;
    box-shadow: 0 1px 4px rgba(0,0,0,0.4);
    padding: 16px 8px 16px;
  }
}

@media print {
  article h3 span {
    animation: none;
  }
}

</style>
